<% if flash.now[:notice] %>
<div class="alert alert-success">
  <div class="notice">
    <%= flash.now[:notice] %>
    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<% elsif flash.now[:danger] %>
<div class="alert alert-danger">
  <div class="danger">
    <%= flash.now[:danger] %>
    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<% end %>
<div class="jumbotron mr-2">
  <img class="rounded float-right img-thumbnail img-fluid m-2" src="https://proxy.duckduckgo.com/iu/?u=http%3A%2F%2Fimg.memecdn.com%2FThe-gossip-turkey_c_128800.jpg&f=1" alt="potin">
  <h1 class="display-4">Bienvenue sur le Potin Project&nbsp!</h1>
  <p class="lead">Les potins les plus int√©ressants de THP !</p>
  <hr class="my-4">
  <% if session[:user_id] != nil %>
    <p>Tu vas pouvoir ajouter ton potin :</p>
    <%= link_to "Ajouter un potin", new_gossip_path,:class => "btn-danger btn btn-lg"%>
  <% else %>
    <p>Inscris-toi pour ajouter un potin :</p>
    <%= link_to "Je m'inscris", new_user_path,:class => "btn-danger btn btn-lg"%>
  <% end %>
</div>

  <div class="card-columns border-info container">
  <% @gossip.each do |i| %>
    <div class="card" style="width: 18rem;">
      <div class="card-header"><h5 class="card-title"><%= i.title %> <span class="badge badge-secondary">
      <i class="fas fa-comments"></i> <%= i.comments.count %></span></h5>
      </div>
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted"><%= i.user.first_name %></h6>
        <%= link_to "Go Potin", gossip_path(i.id),:class => "btn-info btn p-1"%>
      </div>
    </div>
  <% end %>
</div>
