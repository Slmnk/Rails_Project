

<h1 class="text-center mb-5 mt-4"><i class="fas fa-city"></i> Potins de la ville de : <u><%= @city.name %></u></h1>
<div class="card-columns border-info container">
  <% @gossips.each do |i| %>
    <div class="card" style="width: 18rem;">
      <div class="card-header"><h5 class="card-title"><%= i.title %></h5></div>
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted"><%= i.user.first_name %></h6>
        <%= link_to "Go Potin", gossip_path(i.id),:class => "btn-info btn p-1"%>
      </div>
    </div>
  <% end %>
</div>
